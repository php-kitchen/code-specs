{
    "name": "php-kitchen/code-specs",
    "description": "BDD extension for PHPUnit that allows to write tests as a specifications in a human-readable format.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/php-kitchen/code-specs",
    "keywords": [
        "PHPUnit",
        "BDD",
        "specification",
        "spec",
        "tests",
        "tester",
        "extension",
        "unit tests"
    ],
    "support": {
        "issues": "https://github.com/php-kitchen/code-specs/issues?state=open",
        "forum": "https://discord.gg/Ez5VZhC",
        "docs": "https://github.com/php-kitchen/code-specs/tree/master/docs",
        "source": "https://github.com/php-kitchen/code-specs"
    },
    "authors": [
        {
            "name": "Dima Kolodko",
            "email": "dima@kolodko.pro"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "satooshi/php-coveralls": "^1.0",
        "dms/phpunit-arraysubset-asserts": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "PHPKitchen\\CodeSpecs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    }
}
